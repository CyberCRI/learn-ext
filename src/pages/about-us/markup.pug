extends ../partials/layout.pug

append head
  title About Us | WeLearn

mixin sponsorItem(title, url, urlText, imageUrl)
  li.bp3-card.bp3-elevation-1.bp3-interactive
    a.sponsor(
      href=url
      title=title
      rel='noopener noreferrer'
      target='_blank'
      external)
      figure
        img(src=imageUrl, alt=title, height=80)
        figcaption
          h3 #{title}
          p #{urlText}

mixin softwareItem(title, url, urlText, imageUrl)
  li.bp3-card.bp3-elevation-1.bp3-interactive
    a.sponsor(
      href=url
      title=title
      target='_blank'
      external)
      figure
        img(src=imageUrl, alt=title, height=30)
        figcaption
          h3 #{title}

block append main
  section.article.about
    h1 Sponsors
    p WeLearn is a project by CRI Paris, supported by Mairie de Paris.

    ul.sponsor-list
      +sponsorItem(
        "Ministère de l'Éducation Nationale et de la Jeunesse",
        'https://www.education.gouv.fr/',
        'education.gouv.fr',
        '/media/logos/republique-francaise.png')
      +sponsorItem(
        'Mairie de Paris',
        'https://paris.fr/',
        'paris.fr',
        '/media/logos/marie-de-paris.png')
      +sponsorItem(
        'Centre de Recherches Interdisciplinaires',
        'https://www.cri-paris.org/',
        'cri-paris.org',
        '/media/logos/cri/color.png')
      +sponsorItem(
        'Fondation Bettencourt Schueller',
        'https://www.fondationbs.org/fr/',
        'fondationbs.org',
        '/media/logos/fondation-bettencourt.png')

      +sponsorItem(
        'Learning Planet',
        'https://www.learning-planet.org/en',
        'learning-planet.org',
        '/media/logos/learning-planet-mark.png')

    h1 Software and Services
    p Our huge thanks to these software projects which helped us bootstrap quickly.

    a(href='https://carrotsearch.com', title='CarrotSearch DotAtlas', target='_blank')
      img(src='/media/logos/dotatlas.svg', alt='CarrotSearch DotAtlas', height=30)

    p Thanks to Netlify for powering our preview and dev webpages.
    a(href='https://www.netlify.com', title='Netlify', target='_blank')
      img(
        src='https://www.netlify.com/img/global/badges/netlify-dark.svg'
        alt='Deploys by Netlify')

  section.small-text
    include:md-transpile ./footnotes.md

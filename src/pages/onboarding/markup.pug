extends ../partials/layout.pug

append head
  title Bienvenue | WeLearn

append scripts

mixin dotbg
  svg.fill-parent(width='100%' height='100%')
    pattern#dots(x=0 y=0 width=10 height=10 patternUnits='userSpaceOnUse' patternContentUnits='userSpaceOnUse')
      circle.dotUnit(cx=5 cy=5 r=1)
    rect#bg(x=0 y=0 width='100%' height='100%' fill='url(#dots)')

append main
  div.presentation
    section.slide.tile.blurb
      div.tile.is-6.is-parent
        div.align-middle
          img.logo(src='/icons/browsers/icon-round-v1.png' height=80)
          h1 Making the web a learner-friendly place.
          // Let's make an over engineered solution.
          p WeLearn will index and qualify learning resources.
          p It lets people analyse their own learning path, and help them search for pedagogical resources.
          span#login-button

      div.tile.is-6.is-parent
        div.toc
          a.ref.learn(href='#j-learn')
            span.index 1
            h2 Learn
            p Curate your Library

          a.ref.discover(href='#j-discover')
            span.index 2
            h2 Discover
            p Efficiently find Resources

          a.ref.visualise(href='#j-discover')
            span.index 3
            h2 Visualise
            p A landscape of your learning


    section#j-learn.slide.tile.whatis
      div.tile.is-6.is-parent
        div.align-middle.fadeInUp(data-trigger)
          h1 Learn
          h2 Curate your Library with WeLearn Extension.
          p When you find a resource you like, click the anchor to add it to your library.

          div#download-buttons

      div.tile.is-6.is-parent
        div.align-middle
          img.fit-cover(src='/media/illustrations/shot-toolbar.png' role='presentation')

    section.slide.resources-demo
      div#demo-cards
      +dotbg

    section#j-discover.slide.tile.discover
      div.tile.is-6.is-parent
        div.align-middle.fadeInUp(data-trigger)
          h1 Discover
          ol
            li Browse resources on your Knowledge Map.
            li Find qualified resources from your peers.
            li Create your own learning path.

      div.tile.is-6
        img.screenshot(src='/media/illustrations/shot-discover-page.jpg' role='presentation')

    section.slide.tile.wikipedia
      div.tile.is-8.is-parent
        img.screenshot(src='/media/illustrations/shot-wikipedia-concepts.jpg' role='presentation')
      div.tile.is-4.is-parent
        div.align-middle
          h1 Standing on the Shoulder of the Giants
          h2 Wikipedia Integration

    section.slide.tile.close-off
      div.tile.is-4.is-parent
        div.align-middle
          h1 Open, Inclusive, and Private.
          p.
            We manage our code, features, and bug reports on GitHub. If you have
            quesions, ideas, or just want to say Hi! feel free to pass by our
            repository.
          p
            a.bp3-button(href='https://github.com/CyberCRI/learn-ext') Contribute on GitHub

          p
            a.bp3-button.bp3-minimal(href='https://www.netlify.com' style='padding: 0')
              img(
                alt='Deploys by Netlify'
                src='/media/logos/netlify-dark.svg')

      div.tile.is-8.is-parent
        div.align-middle.fit-box
          ul.misc-features
            li.privacy
              img(src='/media/illustrations/ico-heart.svg')
              h2 Privacy by design.
              p

            li.i18n
              img(src='/media/illustrations/ico-i18n.svg')
              h2 We speak many languages!

            li.a11y
              img(src='/media/illustrations/ico-a11y.svg')
              h2 Accessible

            li.open
              img(src='/media/illustrations/ico-star.svg')
              h2 Open source


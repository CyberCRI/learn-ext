extends ../partials/layout.pug

append head
  title Changelog | WeLearn

mixin github_link(kind, fragment)
  a(href='https://github.com/CyberCRI/learn-ext/' + kind + '/' + fragment)
    code=fragment

block append main
  section.article.changelog
    article.log
      include:md-transpile ./changelog.md

    article.dev
      h3 Build Information
      p.
        If you run into some error or bugs, please let us know!
        Please include the information below to help us with debugging.

      p Version: #[code=env.info_version]
      p Build: #[+github_link('commit', env.info_hash)]
      p Branch: #[+github_link('tree', env.info_branch)]
      p Date: #[code=env.info_buildtime]
